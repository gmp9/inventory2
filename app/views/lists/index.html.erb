<h3>List</h3>
 <%= link_to 'New item', new_list_path %>
 
<table>
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Date</th>
    <th colspan="2"></th>
  </tr>
 
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.item %></td>
      <td><%= list.quantity %></td>
      <td><%= list.date %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td>_</td>
      <td><%= link_to 'Delete', list_path(list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
